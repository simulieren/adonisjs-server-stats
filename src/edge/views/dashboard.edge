<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Server Stats Dashboard</title>
  <style>{{{ css }}}</style>
</head>
<body>
  <div id="ss-dash"></div>
  <script type="application/json" id="ss-dash-config">{{{ JSON.stringify(dashConfig) }}}</script>

  @if(transmitClient)
    <script>
      try {
        {{{ transmitClient }}}
      } catch(e) {
        console.warn('[server-stats] Transmit client failed to load:', e.message || e);
      }
    </script>
  @end

  <script>{{{ js }}}</script>
</body>
</html>
